delete a node in ll at particular postion
  

/*
class Node {
public:
    int data;
    Node* next;

    Node(int data) {
        this->data = data;
        this->next = nullptr;
    }
};
*/
class Solution {
  public:
    Node* deleteNode(Node* head, int x)
    {
        // code here
        Node *prev=NULL;
        Node *curr=head;
        if(x==1)
         {                           //if only one node presemt
            Node *temp=head;
            head=head->next;
            delete temp;
            return head;
         }
        else
         {
           x--;
           while(x--)
          {
            prev=curr;
            curr=curr->next;
           }
        
           prev->next=curr->next;
           return head;
        }
        
    }
};


without head pointer ,the node which is going to delete that pointer is given


  /*
struct Node {
  int data;
  struct Node *next;
  Node(int x) {
    data = x;
    next = NULL;
  }
}*head;
