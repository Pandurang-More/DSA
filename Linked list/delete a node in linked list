next wale ka data prev me copy krna hai
class Solution {
  public:
    void deleteNode(Node* del_node) {
        // code here
        Node* temp=del_node->next;
        del_node->data=temp->data;
        del_node->next=temp->next;
        delete temp;
    }
};
