/****************************************************************************************
PALINDROME LINKED LIST
****************************************************************************************
Two Pointer Approach
Time Complexity : O(n)
Space Complexity: O(1)
****************************************************************************************/

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */

class Solution {
public:
    bool isPalindrome(ListNode* head)
    {
        // Empty or single node is always palindrome
        if (head == NULL || head->next == NULL)
            return true;

        // Step 1: Find middle using slow & fast pointers
        ListNode* slow = head;
        ListNode* fast = head;

        while (fast && fast->next)
        {
            slow = slow->next;
            fast = fast->next->next;
        }

        // If odd length, skip the middle node
        if (fast != NULL)
            slow = slow->next;

        // Step 2: Reverse second half
        ListNode* prevn = NULL;
        ListNode* fut = NULL;

        while (slow)
        {
            fut = slow->next;
            slow->next = prevn;
            prevn = slow;
            slow = fut;
        }

        // Step 3: Compare first half and reversed second half
        ListNode* head1 = prevn;
        ListNode* head2 = head;
        bool isPalin = true;

        while (head1)
        {
            if (head1->val != head2->val)
            {
                isPalin = false;
                break;
            }
            head1 = head1->next;
            head2 = head2->next;
        }

        // Step 4: Restore the second half (optional but good practice)
        ListNode* curr = prevn;
        prevn = NULL;
        fut = NULL;

        while (curr)
        {
            fut = curr->next;
            curr->next = prevn;
            prevn = curr;
            curr = fut;
        }

        return isPalin;
    }
};

/****************************************************************************************
RECURSION APPROACH
****************************************************************************************
Time Complexity : O(n)
Space Complexity: O(n)   // recursion stack
****************************************************************************************/

class Solution {
public:
    ListNode* left;   // pointer from start

    bool isPalindrome(ListNode* head) {
        left = head;              // start from first node
        return helper(head);
    }

    bool helper(ListNode* right) {
        // when we reach end of list
        if (right == NULL)
            return true;

        // go to last node
        if (helper(right->next) == false)
            return false;

        // compare left and right values
        if (left->val != right->val)
            return false;

        // move left pointer forward
        left = left->next;

        return true;
    }
};
