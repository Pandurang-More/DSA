/*
====================================================
Minimum Flips to Make (a OR b == c)
====================================================

Given 3 positive numbers a, b and c.

Return the minimum flips required in some bits of
a and b to make (a OR b == c).

Flip operation:
- Change bit 1 → 0
- Change bit 0 → 1

----------------------------------------------------
Example 1:
Input:  a = 2, b = 6, c = 5
Output: 3

Explanation:
After flips:
a = 1, b = 4, c = 5
(a OR b == c)

----------------------------------------------------
Example 2:
Input:  a = 4, b = 2, c = 7
Output: 1

----------------------------------------------------
Example 3:
Input:  a = 1, b = 2, c = 3
Output: 0

----------------------------------------------------
Constraints:
- 1 <= a, b, c <= 10^9
====================================================
*/


/* ==================================================
   Approach 1: Bit-by-bit Checking
   ================================================== */
class Solution {
public:
    int minFlips(int a, int b, int c) {
        int flips = 0;

        while (a != 0 || b != 0 || c != 0)
        {
            if ((c & 1) == 0)
            {
                if ((a & 1) == 1)
                    flips++;
                if ((b & 1) == 1)
                    flips++;
            }
            else
            {
                if ((a & 1) == 0 && (b & 1) == 0)
                    flips++;
            }

            a = a >> 1;
            b = b >> 1;
            c = c >> 1;
        }

        return flips;
    }
};



/* ==================================================
   Approach 2: Bitwise XOR + AND Trick
   ================================================== */
class Solution {
public:
    int minFlips(int a, int b, int c) {
        int flips = 0;

        int temp = ((a | b) ^ c);
        int temp1 = (temp & (a & b));

        while (temp)
        {
            flips += (temp & 1);
            temp = temp >> 1;
        }

        while (temp1)
        {
            flips += (temp1 & 1);
            temp1 = temp1 >> 1;
        }

        return flips;
    }
};
