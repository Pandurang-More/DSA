/*
====================================================
Check if Array is Sorted
====================================================

Given an array arr[] of size n,
return true if the array is sorted in
non-decreasing order, otherwise return false.
====================================================
*/

bool isSorted(int arr[], int n) {
    // Code Here
    for (int i = 1; i < n; i++)
    {
        if (arr[i] >= arr[i - 1])
        {
            // continue checking
        }
        else
            return false;
    }
    return true;
}
