// LeetCode 441: Arranging Coins
// https://leetcode.com/problems/arranging-coins/description/

class Solution {
public:
    int arrangeCoins(int n) {

        long long start = 1;
        long long end = n;

        while (start <= end) {

            long long mid = start + (end - start) / 2;
            long long coins = mid * (mid + 1) / 2;               //  sum till the mid

            if (coins == n)
                return mid;
            else if (coins < n)
                start = mid + 1;
            else
                end = mid - 1;
        }

        return end;
    }
};
