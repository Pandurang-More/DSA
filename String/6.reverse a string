/****************************************************************************************
REVERSE STRING (IN-PLACE)
****************************************************************************************

Write a function that reverses a string.
The input string is given as an array of characters `s`.

You must do this by modifying the input array in-place with O(1) extra memory.

----------------------------------------------------------------------------------------
Example 1:
Input:  s = ["h","e","l","l","o"]
Output: ["o","l","l","e","h"]

Example 2:
Input:  s = ["H","a","n","n","a","h"]
Output: ["h","a","n","n","a","H"]

----------------------------------------------------------------------------------------
Constraints:
- 1 <= s.length <= 10^5
- s[i] is a printable ASCII character
****************************************************************************************/


/****************************************************************************************
ITERATIVE TWO-POINTER APPROACH
****************************************************************************************/

class Solution {
public:
    void reverseString(vector<char>& s) 
    {
        int start = 0;
        int end   = s.size() - 1;

        while (start < end)
        {
            swap(s[start], s[end]);
            start++;
            end--;
        }
    }
};


/****************************************************************************************
RECURSIVE APPROACH
****************************************************************************************/

class Solution {
public:
    void doing(vector<char>& s, int start, int end)
    {
        if (start >= end)
            return;

        swap(s[start], s[end]);
        doing(s, start + 1, end - 1);
    }

    void reverseString(vector<char>& s) 
    {
        doing(s, 0, s.size() - 1);
    }
};
