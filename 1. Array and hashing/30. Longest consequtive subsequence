/****************************************************************************************************
128. LONGEST CONSECUTIVE SEQUENCE
****************************************************************************************************

Given an unsorted array of integers nums, return the length of the longest consecutive sequence.
You must write an algorithm that runs in O(n) time.

----------------------------------------------------------------------------------------------------
Example 1:
Input:  nums = [100,4,200,1,3,2]
Output: 4
Explanation: Sequence = [1,2,3,4]

----------------------------------------------------------------------------------------------------
Example 2:
Input:  nums = [0,3,7,2,5,8,4,6,0,1]
Output: 9

----------------------------------------------------------------------------------------------------
Example 3:
Input:  nums = [1,0,1,2]
Output: 3

----------------------------------------------------------------------------------------------------
Constraints:
0 <= nums.length <= 10^5
-10^9 <= nums[i] <= 10^9
****************************************************************************************************/


/****************************************************************************************************
BRUTE FORCE
Time Complexity : O(N^2)
Space Complexity: O(1)
****************************************************************************************************/

class Solution {
public:

    bool ls(vector<int>& nums, int x)
    {
        for (int i = 0; i < nums.size(); i++)
        {
            if (nums[i] == x)
                return true;
        }
        return false;
    }

    int longestConsecutive(vector<int>& nums)
    {
        int n = nums.size();
        if (n == 0) return 0;

        int count;
        int largest = 1;

        for (int i = 0; i < n; i++)
        {
            count = 1;
            int x = nums[i];

            while (ls(nums, x + 1) == true)
            {
                x = x + 1;
                count++;
            }

            largest = max(largest, count);
        }

        return largest;
    }
};



/****************************************************************************************************
BETTER APPROACH (SORTING)
Time Complexity : O(N log N)
Space Complexity: O(1)
****************************************************************************************************/

class Solution {
public:

    int longestConsecutive(vector<int>& nums)
    {
        int n = nums.size();
        if (n == 0) return 0;

        int count = 0;
        int largest = 1;
        int smallest = INT_MIN;

        sort(nums.begin(), nums.end());

        for (int i = 0; i < n; i++)
        {
            if (nums[i] - 1 == smallest)
            {
                count = count + 1;
                smallest = nums[i];
            }
            else if (nums[i] != smallest)
            {
                count = 1;
                smallest = nums[i];
            }

            largest = max(largest, count);
        }

        return largest;
    }
};



/****************************************************************************************************
OPTIMAL APPROACH (HASH SET)
Time Complexity : O(N)
Space Complexity: O(N)
****************************************************************************************************/

class Solution {
public:

    int longestConsecutive(vector<int>& nums)
    {
        int n = nums.size();
        if (n == 0) return 0;

        int largest = 1;

        unordered_set<int> st;

        for (int i = 0; i < n; i++)
        {
            st.insert(nums[i]);
        }

        for (auto &it : st)
        {
            // Check only if it is starting element of sequence
            if (st.find(it - 1) == st.end())
            {
                int cnt = 1;
                int x = it;

                while (st.find(x + 1) != st.end())
                {
                    x++;
                    cnt++;
                }

                largest = max(largest, cnt);
            }
        }

        return largest;
    }
};
