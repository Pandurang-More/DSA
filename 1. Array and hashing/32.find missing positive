/****************************************************************************************************
FIRST MISSING POSITIVE
****************************************************************************************************

Given an unsorted integer array nums, return the smallest positive integer that is not present in nums.

You must implement an algorithm that runs in O(n) time and uses O(1) auxiliary space.

----------------------------------------------------------------------------------------------------
Example 1:
Input:  nums = [1,2,0]
Output: 3

Example 2:
Input:  nums = [3,4,-1,1]
Output: 2

Example 3:
Input:  nums = [7,8,9,11,12]
Output: 1

----------------------------------------------------------------------------------------------------
Constraints:
1 <= nums.length <= 10^5
-2^31 <= nums[i] <= 2^31 - 1
****************************************************************************************************/


class Solution {
public:
    int firstMissingPositive(vector<int>& nums) 
    {
        int n = nums.size();
        bool ones = false;

        // Step 1: Check presence of 1 and normalize values
        for (int i = 0; i < n; i++)
        {
            if (nums[i] == 1)
                ones = true;

            if (nums[i] <= 0 || nums[i] > n)
                nums[i] = 1;
        }

        if (ones == false)
            return 1;

        // Step 2: Mark indices using sign
        for (int i = 0; i < n; i++)
        {
            int num = abs(nums[i]);
            int idx = num - 1;

            if (nums[idx] < 0)
                continue;

            nums[idx] *= -1;
        }

        // Step 3: Find first positive index
        for (int i = 0; i < n; i++)
        {
            if (nums[i] > 0)
                return i + 1;
        }

        return n + 1;
    }
};
